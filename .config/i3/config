# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    output HDMI2
    tray_output none
    colors {
            background #262626
            separator #bcbcbc
            focused_workspace #626262 #626262 #ffffff
            inactive_workspace #262626 #262626 #bcbcbc
    }
}

bar {
    output eDP1
    status_command i3status
    colors {
            background #262626
            separator #bcbcbc
            focused_workspace #626262 #626262 #ffffff
            inactive_workspace #262626 #262626 #bcbcbc
    }
}
bindsym $mod+Shift+b bar mode toggle

exec xrandr --output HDMI2 --auto --left-of eDP1
